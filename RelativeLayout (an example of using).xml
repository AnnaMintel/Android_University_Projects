<?xml version="1.0" encoding="utf-8"?>

  <RelativeLayout
      xmlns:android="http://schemas.android.com/apk/res/android"
      android:layout_width="match_parent"
    android:layout_height="match_parent"
      android:gravity="center">

    <TextView
        android:id="@+id/view1"
        android:layout_width="90dp"
        android:layout_height="150dp"
        android:background="@android:color/holo_green_light"
        android:gravity="center_vertical"
        android:text="1" />

    <TextView
        android:id="@+id/view2"
        android:layout_width="90dp"
        android:layout_height="150dp"
        android:layout_toEndOf="@id/view1"
        android:background="@android:color/holo_green_dark"
        android:gravity="center_horizontal"
        android:text="2" />

    <TextView
        android:id="@+id/view3"
        android:layout_width="90dp"
        android:layout_height="150dp"
        android:layout_toEndOf="@id/view2"
        android:background="@android:color/holo_orange_light"
        android:gravity="bottom|center_horizontal"
        android:text="3" />

  <TextView
      android:id="@+id/view4"
      android:layout_width="90dp"
      android:layout_height="150dp"
      android:layout_toEndOf="@id/view3"
      android:background="@android:color/holo_orange_dark"
      android:gravity="right"
      android:text="4" />

  <TextView
      android:id="@+id/view5"
      android:layout_width="70dp"
      android:layout_height="150dp"
      android:layout_below="@id/view1"
      android:background="@android:color/holo_purple"
      android:gravity="center"
      android:text="5" />

  <TextView
      android:id="@+id/view6"
      android:layout_width="290dp"
      android:layout_height="30dp"
      android:layout_toEndOf="@id/view5"
      android:layout_alignTop="@id/view5"
      android:background="@android:color/holo_red_light"
      android:gravity="center"
      android:text="6" />

  <TextView
      android:id="@+id/view7"
      android:layout_width="290dp"
      android:layout_height="120dp"
      android:layout_below="@id/view6"
      android:layout_alignLeft="@id/view6"
      android:layout_alignBottom="@id/view5"
      android:background="@android:color/holo_red_dark"
      android:gravity="center"
      android:text="7" />

  <TextView
      android:id="@+id/view8"
      android:layout_width="160dp"
      android:layout_height="150dp"
      android:layout_below="@id/view5"
      android:background="@android:color/holo_blue_bright"
      android:gravity="center"
      android:text="8" />

  <TextView
      android:id="@+id/view9"
      android:layout_width="70dp"
      android:layout_height="120dp"
      android:layout_toEndOf="@id/view8"
      android:layout_below="@id/view7"
      android:layout_alignBottom="@id/view8"
      android:background="@android:color/holo_blue_dark"
      android:gravity="center"
      android:text="9" />


  <TextView
      android:id="@+id/view10"
      android:layout_width="130dp"
      android:layout_height="120dp"
      android:layout_toEndOf="@id/view9"
      android:layout_below="@id/view7"
      android:layout_alignBottom="@id/view8"
      android:background="@android:color/holo_blue_light"
      android:gravity="center"
      android:text="10" />


  </RelativeLayout>

